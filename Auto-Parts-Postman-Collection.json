{
  "info": {
    "name": "Auto-Parts Ecommerce API",
    "description": "API collection for auto-parts e-commerce system with automated bulk ingestion",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"Admin\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Product Management",
      "item": [
        {
          "name": "Email Bulk Product Ingestion - JSON",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sourceEmail\": \"supplier@example.com\",\n  \"products\": [\n    {\n      \"name\": \"Brake Pad\",\n      \"productCode\": \"BP001\",\n      \"price\": 25.99\n    },\n    {\n      \"name\": \"Oil Filter\",\n      \"productCode\": \"OF002\",\n      \"price\": 12.50\n    },\n    {\n      \"name\": \"Air Filter\",\n      \"productCode\": \"AF003\",\n      \"price\": 18.75\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/email/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "email", "products"]
            }
          },
          "response": []
        },
        {
          "name": "Email Bulk Product Ingestion - Excel File",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/excel/file.xlsx"
                },
                {
                  "key": "sourceEmail",
                  "value": "supplier@example.com",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/email/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "email", "products"]
            }
          },
          "response": []
        },
        {
          "name": "Email Bulk Product Ingestion - CSV File",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/csv/file.csv"
                },
                {
                  "key": "sourceEmail",
                  "value": "supplier@example.com",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/email/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "email", "products"]
            }
          },
          "response": []
        },
        {
          "name": "Create Single Product (Admin only)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Engine Oil\",\n  \"productCode\": \"EO004\",\n  \"price\": 35.99\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Update Product (Admin only)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Engine Oil\",\n  \"productCode\": \"EO004\",\n  \"price\": 39.99\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Product (Admin/Staff)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": "",
      "description": "JWT token obtained after login"
    },
    {
      "key": "productId",
      "value": "",
      "description": "Product ID for individual product operations"
    }
  ]
}